{
  "compilerOptions": {
    "jsx": "react",
    "isolatedModules": true,// Babel이 TypeScript 프로젝트의 파일을 안전하게 트랜스파일할 수 있는지 확인합니다.
    "noImplicitAny": true, // any type check
    "strictNullChecks": true, //null check
    "declaration": true, //d.ts file 생성(type 정의되어 있음)
    "emitDeclarationOnly": true, //d.ts file만 방출
    "baseUrl": "./",
    "paths": { //절대 경로 설정
      "@Components/*" : ["src/components/pages/*"],
    },
  },
  "exclude": [
    "node_modules"
  ],
}
